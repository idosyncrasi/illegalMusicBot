{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ES2020",
		"rootDir": "./src/",
		"outDir": "./dist/",
		"strict": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"removeComments": true,
		"typeRoots": [
			"node_modules/@types"
		],
		"sourceMap": true,
		"baseUrl": "./"
	},
	"exclude": [
		".vscode",
		".yt-dlp",
		"node_modules",
		"dist",
		".gitignore"
	],
}