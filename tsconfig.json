{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ES2020",
		"rootDir": "./src/",
		"outDir": "./dist/",
		"strict": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"removeComments": true,
		"typeRoots": [
			"node_modules/@types"
		],
		"sourceMap": true,
		"baseUrl": "./"
	},
	"files": [
		"src/bot.ts",
		"src/config.ts",
		"src/commands/play.ts",
		"src/commands/utils.ts",
		"src/listeners/onMessage.ts",
		"src/listeners/ready.ts"
	],
	"exclude": [
		"node_modules",
		"dist"
	],
}